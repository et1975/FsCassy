{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "windows": {
        "command": "build"
    },
    "linux": {
        "command": "./build.sh"
    },
    "osx": {
        "command": "./build.sh"
    },
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "doc",
            "args": ["GenerateDocs"],
            "suppressTaskName": true
        },
        {
            "taskName": "build",
            "args": ["Incremental"],
            "isBuildCommand": true,
            "suppressTaskName": true
        },
        {
            "taskName": "watch",
            "args": ["Watch"],
            "isBackground": true,
            "suppressTaskName": true
        }    
    ]
}